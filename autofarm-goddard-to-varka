//goodard to varkas

var
  item: TL2Item;
  buff: TL2Buff;


procedure GetBuff;
begin
  if not User.Buffs.ByID(1204, buff) then 
  begin
    Engine.EnterText('Buffs are needed. Buffing...');
    Delay(500);
    Engine.SetTarget('Skufidon');
    Delay(200);
   Engine.DlgOpen;
    Delay(1000);
    Engine.DlgSel(7);
    Delay(1000);
    Engine.DlgSel(9);
     Delay(1000);
    Engine.DlgSel(10);
    Delay(1000);
    Engine.DlgSel(9);
   Delay(1000);
    Engine.DlgSel(10);
    Delay(1000);
    Engine.DlgSel(11);
  Delay(1000);
    Engine.DlgSel(4);
  Delay(500);

  end;
end;


procedure GetToVarka;
begin
  if User.InRange(147947, -55288, -2741, 300, 200) and User.Buffs.ByID(1204, buff) then 
  begin
    Engine.SetTarget(31275); //id da gk de goddard
    Delay(200);
    Engine.DlgOpen;
    Delay(300);
    Engine.DlgSel(1);
    Delay(300);
    Engine.DlgSel('Varka');
    Delay(1000);
Engine.MoveTo(125666, -40683, -3761);
Engine.MoveTo(125375, -40110, -3754);
Engine.MoveTo(124564, -39095, -3959);
Engine.MoveTo(123596, -38755, -4034);
Engine.MoveTo(122715, -38604, -4032);
Engine.MoveTo(122092, -38512, -3889);
Engine.MoveTo(121079, -38015, -3877);

    Delay(3600);      //huge delay on MA so pt dont kill them selfs all the time
    Engine.LoadZone('Varka.zmap');
    Delay(300);
    Engine.FaceControl(0, true);
  end;
end;

